{
    "manifest_version": 3,
    "name": "LLM Input Reader",
    "version": "1.0",
    "description": "Reads text from input fields and sends it to the local LLM.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
    "service_worker": "dist/background.bundle.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://*/*"
    ]
  }
  